@model MvcApp.Models.Items.Items;

@{
    ViewData["title"] = "Edit";
}

<h3>Edit User Data</h3>


<form asp-action="Edit" method="post">
    <div class="form-check form-group">
        <label for="Id">Id</label>
        <input class="form-control" type="number" value=@Model.Id />
    </div>
    <div class="form-check form-group">
        <label for="Name">Name</label>
        <input class="form-control" type="text" value=@Model.Name />
    </div>
    <div class="form-check form-group">
        <label for="Age">Age</label>
        <input class="form-control" type="number" value=@Model.Age />
    </div>
    <div class="form-check form-group">
        <label for="Department">Department</label>
        <input class="form-control" type="text" value=@Model.Department />
    </div>
    <br />
    <div class="form-check form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
    </div>
</form>